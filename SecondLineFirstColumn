using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task2
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int numberOfLines = 8;
            int numberOfColumns = 8;
            int firstColumnProduct = 1;
            int secondLineSum = 0;
            int minValue = 1;
            int maxValue = 10;
            int[,] array = new int[numberOfColumns, numberOfLines];

            for (int i = 0; i < array.GetLength(0); i++)
            {
                for (int j = 0; j < array.GetLength(1); j++)
                {                  
                    array[i, j] = random.Next(minValue, maxValue);
                    Console.Write(array[i, j] + " ");
                    if (i == 1)
                    {
                        secondLineSum = secondLineSum + array[i, j];
                    }              
                    if (j == 0)
                    {
                        firstColumnProduct = firstColumnProduct * array[i, j];
                    }
                }
                Console.WriteLine();
            }
            Console.WriteLine($"Сумма второй строки = {secondLineSum}, произведение первого стобца = {firstColumnProduct}");
            Console.ReadLine();
        }
    }
}

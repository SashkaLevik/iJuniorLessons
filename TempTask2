        //                seller._shop.Add(_inventory[itemID - 1]);
        //            }
        //            else
        //            {
        //                Console.WriteLine("У продовца не хватает денег");
        //            }
        //        }
        //        else
        //        {
        //            Console.WriteLine("Нет такого количества товара");
        //        }
        //    }

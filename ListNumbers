using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите числа.\nВведите команду sum для вывода суммы всех чисел.\n" +
               "Введите команду exit для выхода");
                    
            bool isInputing = true;
            List<int> numbers = new List<int>();           

            while (isInputing)
            {
                string userInput = Console.ReadLine();
                int number = 0;
                if (!int.TryParse(userInput, out number))
                {
                    if (userInput != "sum" && userInput != "exit")
                    {
                        Console.WriteLine("Введите число!!!");
                    }                   
                }             
                else
                {
                    numbers.Add(number);
                }

                Sum(userInput, numbers);

                if (userInput == "exit")
                {
                    isInputing = false;
                }               
            }     
        }
        
        static void Sum(string userInput, List<int> numbers)
        {
            int sum = 0;

            if (userInput == "sum")
            {
                foreach (var element in numbers)
                {
                    sum += element;
                }
                Console.WriteLine(sum);
            }
        }
    }
}

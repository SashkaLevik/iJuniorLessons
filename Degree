using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task4
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int basicNumber = 2;
            int greateNumber = 2;
            int degree = 0;
            int number = random.Next(2, 50);
            Console.WriteLine($"Какое то рандомное число - { number}");

            while (greateNumber <= number)
            {
                greateNumber *= basicNumber;             
            }
            Console.WriteLine($"Число превосходящее заданное - {greateNumber}");
            while (greateNumber >= basicNumber)
            {
                greateNumber /= basicNumber;
                degree++;
            }
                    
            Console.WriteLine($"Минимальная степень двойки - {degree}");

            Console.ReadLine();
        }
    }
}

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Operators_and_Loops
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите сообщение");
            string mesage = Console.ReadLine();
            Console.WriteLine("Сколько сообщений вывести на экран?");
            int mesageCount = int.Parse(Console.ReadLine());
            
            for (int i = 0; i < mesageCount; i++)
            {
                Console.WriteLine(mesage);
            }
            
            Console.ReadKey();
        }
    }
}

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task4
{
    class Program
    {
        static void Main(string[] args)
        {
            int account = 0;
            int price;
            int minPrice = 100;
            int maxPrice = 1000;
            bool isWorking = true;
            Random random = new Random();            
            Queue<int> customers = new Queue<int>(3);
            customers.Enqueue(1);
            customers.Enqueue(2);
            customers.Enqueue(3);

            while (isWorking)
            {
                price = random.Next(minPrice, maxPrice);
                
                SaleGoods(customers, price);
                
                for (int i = 0; i < customers.Count; i++)
                {
                    account += price;
                }

                Console.WriteLine("В кассе " + account);

                Console.ReadLine();
                if (customers.Count == 0)
                {
                    Console.WriteLine("Покупателей больше нет, мы закрываемся");
                    Console.ReadLine();
                    isWorking = false;
                }
            }
        }

        static void SaleGoods(Queue<int> customers, int price)
        {            
            Console.WriteLine("Покупатель приобрёл товаров на сумму "+ price);
            customers.Dequeue();                                   
            //Console.Clear();
        }
    }
}

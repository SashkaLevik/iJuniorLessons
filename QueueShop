using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task4
{
    class Program
    {
        static void Main(string[] args)
        {            
            int price;
            int minPrice = 100;
            int maxPrice = 1000;
            int customersCount = 3;
            bool isWorking = true;
            Random random = new Random();            
            Queue<int> customers = new Queue<int>();
                                   
            for (int i = 0; i < customersCount; i++)
            {
                price = random.Next(minPrice, maxPrice);
                customers.Enqueue(price);                
            }
                   
            while (isWorking)
            {
                SaleGoods(customers);

                if (customers.Count == 0)
                {
                    Console.WriteLine("Покупателей больше нет, мы закрываемся");
                    Console.ReadLine();
                    isWorking = false;
                }
            }
        }

        static void SaleGoods(Queue<int> customers)
        {
            int account = 0;

            foreach (var customer in customers)
            {
                account += customer;
                Console.WriteLine("Покупатель приобрёл товаров на сумму " + customer);
                Console.WriteLine("В кассе" + account);
                Console.ReadLine();
                Console.Clear();
            }
            while (customers.Count > 0)
            {
                customers.Dequeue();
            }
        }
    }
}

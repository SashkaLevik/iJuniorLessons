using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task4
{
    class Program
    {
        static void Main(string[] args)
        {
            int account = 0;
            int price;
            bool isWorking = true;
            int minPrice = 100;
            int maxPrice = 1000;

            Queue<int> customers = new Queue<int>();
            customers.Enqueue(1);
            customers.Enqueue(2);
            customers.Enqueue(3);

            while (isWorking)
            {
                Random random = new Random();
                price = random.Next(minPrice, maxPrice);

                for (int i = 0; i == 0; i++)
                {
                    account += price;                    
                    Console.WriteLine("В кассе " + account);
                }

                SaleGoods(customers, price);

                if (customers.Count == 0)
                {
                    Console.WriteLine("Покупателей больше нет, мы закрываемся");
                    Console.ReadLine();
                    isWorking = false;
                }
            }
        }

        static void SaleGoods(Queue<int> customers, int price)
        {
            Console.WriteLine("Покупатель " + customers.Dequeue() + " приобрёл товаров на сумму " + price);                                
            Console.ReadLine();
            Console.Clear();
        }
    }
}

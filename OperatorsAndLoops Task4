using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task4
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int minValue = 0;
            int maxValue = 101;
            int divisibleOnThree = 3;
            int divisibleOnFive = 5;
            int number = random.Next(minValue, maxValue);
            int numberCount = 0;
            Console.WriteLine(number);

            for (int i = 0; i <= number; i++)
            {
                if (i % divisibleOnThree == 0 || i % divisibleOnFive == 0)
                {
                    numberCount += i;
                }               
            }

            Console.WriteLine(numberCount);
            Console.ReadLine();
        }
    }
}

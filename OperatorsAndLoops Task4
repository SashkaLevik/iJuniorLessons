using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task4
{
    class Program
    {
        static void Main(string[] args)
        {
            Random rand = new Random();
            int minValue = 0;
            int maxValue = 101;
            int divisible3 = 3;
            int divisible5 = 5;
            int number = rand.Next(minValue, maxValue);
            int numberCount = 0;
            Console.WriteLine(number);

            for (int i = 0; i <= number; i++)
            {
                if (i % divisible3 == 0 || i % divisible5 == 0)
                {
                    numberCount += i;
                }               
            }

            Console.WriteLine(numberCount);
            Console.ReadLine();
        }
    }
}

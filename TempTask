using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task2
{
    class Program
    {
        static void Main(string[] args)
        {
            bool isPlaying = true;
            Console.WriteLine("1.Вытянуть карту\n2.Завершить и показать результат\n3.Выход");

            while (isPlaying)
            {
                switch (Convert.ToInt32(Console.ReadLine()))
                {
                    case 1:
                        break;
                    case 2:
                        break;
                    case 3:
                        break;
                }
            }
        }
    }

    class Card
    {
        public string CardSuit { get; private set; }
        public int CardValue { get; private set; }

        public Card(string cardSuit, int cardValue)
        {
            CardSuit = cardSuit;
            CardValue = cardValue;
        }
    }

    class Deck
    {
        Random random = new Random();
        public List<Card> cards = new List<Card>();

        public Deck()
        {
            cards.Add(new Card("Пики", GetCardValue()));
            cards.Add(new Card("Крести", GetCardValue()));
            cards.Add(new Card("Бубны", GetCardValue()));
            cards.Add(new Card("Червы", GetCardValue()));
        }

        private int GetCardValue()
        {
            int cardValue;
            int minCardValue = 1;
            int maxCardValue = 6;
            cardValue = random.Next(minCardValue, maxCardValue);
            return cardValue;
        }

    
    }

    class Player
    {
        public List<Deck> hand = new List<Deck>();

        //я хочу в этом методе удалять карту из колоды и добавлять её игроку
        private void GetCard(Deck deck)
        {
            Random random = new Random();
            int cardSuit;
            int minCardsInDeck = 0;
            int maxCardsInDeck = deck.cards.Count;
          
            if (deck.cards.Count > 0)
            {
                cardSuit = random.Next(minCardsInDeck, maxCardsInDeck);
                deck.cards.RemoveAt(cardSuit);
                hand.Add(cardSuit);// так не выходит
            }
        }
    }
}

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task1
{
    class Program
    {
        static void Main(string[] args)
        {
            bool isPlaying = true;            
            Database database = new Database();
            string userInput;
            Console.WriteLine("Выберите действие\n1.Вывести всех игроков\n2.Добавить игрока" +
                    "\n3.Удалить игрока\n4.Изменить статус бана игрока\n6.Выход");

            while (isPlaying)
            {
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "1" :
                        database.ShowPlayers();
                        break;
                    case "2":
                        database.AddPlayer();
                        break;
                    case "3":
                        database.DeletePlayer();
                        break;
                    case "4":
                        database.BanPlayer();
                        break;                   
                    case "5":
                        isPlaying = false;
                        break;
                }
            }
        }
    }
    
    class Player
    {
        private static int InputID = 0;
        
        public int ID { get; private set; }
        public string Name { get; private set; }
        public string Nickname { get; private set; }
        public int Level { get; private set; }
        public bool IsBanned { get; private set; }

        public Player(string name, string nickname, int level)
        {
            InputID++;            
            ID = InputID;
            Name = name;
            Nickname = nickname;
            Level = level;
            IsBanned = false;
        }
        
        public void ShowInfo()
        {         
            Console.Write($"ID {ID}. Имя игрока {Name}. Никнейм игрока {Nickname}. Уровень игрока {Level}. Бан игрока {IsBanned}\n");
        }

        public void Ban()
        {
            IsBanned = true;
        }

        public void UnBan()
        {
            IsBanned = false;
        }
    }

    class Database
    {
        private List<Player> _players = new List<Player>();        
        
        public void ShowPlayers()
        {
            
            if (_players.Count == 0)
            {
                Console.WriteLine("В базе нет ни одного игрока");
            }
            else
            {
                foreach (var player in _players)
                {
                    player.ShowInfo();
                }
            }           
        }

        public void AddPlayer()
        {
            Random random = new Random();                       
            Console.WriteLine("Введите имя игрока");
            string name = Console.ReadLine();
            Console.WriteLine("Введите никнейм игрока");
            string nickname = Console.ReadLine();
            int level = random.Next(1, 10);
            
            
            Player player = new Player(name, nickname, level);
            _players.Add(player);
        }

        private bool TryGetPlayer(out Player player)
        {
            int inputID;
            inputID = Convert.ToInt32(Console.ReadLine());

            foreach (var gamer in _players)
            {
                if (gamer.ID  == inputID && inputID > 0 && inputID < _players.Count)
                {
                    player = _players.ElementAt(gamer.ID);
                    return true;
                }                                
            }
            player = null;
            return false;
        }
        public void DeletePlayer()
        {
            Console.WriteLine("Введите ID игрока которого хотите удалить");

            if (TryGetPlayer(out Player player))
            {
                _players.Remove(player);
            }
            else
            {
                Console.WriteLine("Такого игрока не существует");
            }
            
        }

        public void BanPlayer()
        {
            Console.WriteLine("Введите ID игрока, чтобы изменить его статус бана");
            int idInput = Convert.ToInt32(Console.ReadLine());

            if (idInput > _players.Count)
            {
                Console.WriteLine("Такого игрока не существует");
            }
            else if (_players.Count > 0)
            {
                if (_players[idInput - 1].IsBanned == false)
                {
                    _players[idInput - 1].Ban();
                }
                else
                {
                    _players[idInput - 1].UnBan();
                }
            }
            else
            {
                Console.WriteLine("В базе нет ни одного игрока");
            }
        }        
    }
}
